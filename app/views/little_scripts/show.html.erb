<h1><strong><%= @little_script.name %></strong></h1>
<h2>Could be finished by <%= react_component('Clock',
                                             {date: (Time.now + @little_script.steps.map(&:duration).sum)},
                                             tag: :span, class: 'my-clock')%> </h2>
<button class="go-button"> start play-through </button>
<%= content_tag :section,
                class: "rNode",
                id: @little_script[:id].to_s,
                data: (@little_script.to_hash).to_json do %>
  <% end %>
<ul style="width: 300px; padding-left: 0">
  <%= render(@little_script.steps) %>
</ul>
<details title="Add steps" open>
  <summary class="cheeky_heading">ADD STEPS</summary>
<%= render 'steps/form', little_script_id: @little_script.id %>
</details>
<%= button_to "Delete Little Script", { action: "destroy", id: @little_script.id },
              method: :delete, data: { confirm: "Are you sure?" } %>
